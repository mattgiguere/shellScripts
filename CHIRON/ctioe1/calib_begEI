#if ($observer == "_NONE_") then 
#   echo "Setting the Observer ... "
#   pan set obs.observer calib_beg
#   GUIUPDATE observer
#endif

echo "Now waiting one moment"
sleep 2


echo "Setting the observation type..."
pan set obs.obstype Calibration
GUIUPDATE obstype
sleep 1

pan set image.comment " "
GUIUPDATE comment
