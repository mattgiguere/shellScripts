sleep 2

echo "Setting the base name..."
pan set image.basename $chi_base
GUIUPDATE basename

sleep 2

echo "Setting the image number..."
pan set image.number $obs_start
GUIUPDATE imnumber

sleep 2

echo "Setting the # Exp. ..."
pan set obs.nimages 1
